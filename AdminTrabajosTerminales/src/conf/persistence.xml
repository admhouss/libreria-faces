<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="adminPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>gestorTrabajoTerminal</jta-data-source>
    <class>escom.info.administrador.jpa.Usurioadministrativo</class>
    <class>escom.info.departamento.jpa.Departamento</class>
    <class>escom.info.departamento.jpa.Responsable</class>
    <class>escom.info.documento.jpa.Documento</class>
    <class>escom.info.documento.jpa.TipoDocente</class>
    <class>escom.info.egresado.jpa.Egresado</class>
    <class>escom.info.egresado.jpa.Generacion</class>
    <class>escom.info.profesor.jpa.Profesor</class>
    <class>escom.info.profesor.jpa.ProfesorDocente</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
